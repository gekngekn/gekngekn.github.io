{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2022",
    /* Modules */
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    },
    "allowSyntheticDefaultImports": true
  },
  "types": [
    "reflect-metadata"
  ],
  "typeRoots": [
    "./node_modules/@types"
  ],
  /* JavaScript Support */
  "allowJs": true,
  /* Emit */
  "sourceMap": true,
  /* Interop Constraints */
  "esModuleInterop": true,
  "forceConsistentCasingInFileNames": true,
  /* Type Checking */
  "strict": true,
  "strictNullChecks": false,
  /* Completeness */
  "skipLibCheck": true
}
